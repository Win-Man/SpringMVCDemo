.blog-header{
	min-height:0;
	margin-bottom:0;
	padding:0;
	background-color:#222222;
	border-radius:0;
	border:none;
	height:50px;
}

.blog-header-title{
	float:left;	
	position:relative;
	width:220px;
}
.blog-header-title>div{
	text-align:center;
	display:inline-block;
	padding:15px 15px;
	font-weight:bold;
	color:#ffffff;
}
.blog-header-content{
	float:right;
	margin-right:30px;
}
.blog-header-content>li{
	display:block;
	text-align:center;
	padding-top:15px;
	padding-bottom:15px;
}


.blog-main{
	position:absolute;
	top:50px;
	overflow:hidden;
	left:0;
	right:0;
	bottom:0;
}

.blog-aside{
	background-color:#222222;
	position:absolute;
	width:220px;
	top:0;
	bottom:0;
	left:0;
	right:0;
}
.blog-aside .blog-menu{
	margin:0;
	padding:0;
}
.blog-menu>li{
	line-height:1.5;
	position:relative;
	left:0;
	list-style-type:none;
}
.blog-menu>li:hover{
	background-color:#101010;
}
.blog-menu>li>a{
	padding:11px 15px;
	position:relative;
	font-weight:bold;
	font-size:14px;
	display:block;
	width:220px;
	height:44px;
	color:#ffffff;	
	text-decoration:none;
}
.blog-content{
	background-color:#ffffff;
	position:absolute;
	left:220px;
	top:0;
	bottom:0;
	right:0;
}