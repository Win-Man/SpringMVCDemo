.blog-header{
	min-height:0;
	margin-bottom:0;
	padding:0;
	background-color:#222222;
	border-radius:0;
	border:none;
	height:50px;
}

.blog-header-title{
	float:left;	
	position:relative;
	width:220px;
}
.blog-header-title>div{
	text-align:center;
	display:inline-block;
	padding:15px 15px;
	font-weight:bold;
	color:#ffffff;
}
.blog-header-content{
	float:right;
	margin-right:30px;
}
.blog-header-content>li{
	display:block;
	text-align:center;
	padding-top:15px;
	padding-bottom:15px;
}


.blog-main{
	position:absolute;
	top:50px;
	overflow:hidden;
	left:0;
	right:0;
	bottom:0;
}

.blog-aside{
	background-color:#222222;
	position:absolute;
	width:220px;
	top:0;
	bottom:0;
	left:0;
	right:0;
}


.blog-content{
	background-color:#ffffff;
	position:absolute;
	left:220px;
	top:0;
	bottom:0;
	right:0;
}
.blog-active{
	background: #000000;
	color: #FFF;
}


.accordion {
	width: 100%;
	max-width: 360px;
	margin: 0px auto 0px;
	padding:0px 0px;
	border-bottom: 1px solid #ffffff;
	background: #222222;
	-webkit-border-radius: 4px;
	-moz-border-radius: 4px;
}
.accordion li{
	list-style-type:none
}

.accordion .link {
	cursor: default;
	display: block;
	padding: 15px 15px 15px 42px;
	color: #ffffff;
	font-size: 14px;
	font-weight: 700;
	border-bottom: 1px solid #ffffff;
	position: relative;
	-webkit-transition: all 0.4s ease;
	-o-transition: all 0.4s ease;
	transition: all 0.4s ease;
}

.accordion li:last-child .link {
	border-bottom: 0;
}

.accordion li i {
	position: absolute;
	top: 16px;
	left: 12px;
	font-size: 18px;
	color: #3C3F41;
	-webkit-transition: all 0.4s ease;
	-o-transition: all 0.4s ease;
	transition: all 0.4s ease;
}

.accordion li i.glyphicon-chevron-down {
	right: 12px;
	left: auto;
	font-size: 16px;
	color:#ffffff;
}

.accordion li.open .link {
	color: #BC0912;
}

.accordion li.open i {
	color: #BC0912;
}
.accordion li.open i.glyphicon-chevron-down {
	-webkit-transform: rotate(180deg);
	-ms-transform: rotate(180deg);
	-o-transform: rotate(180deg);
	transform: rotate(180deg);
}

/**
 * Submenu
 -----------------------------*/
.submenu {
	padding-left:0px;
	display: none;
	background: #3C3F41;
	font-size: 14px;
}

.submenu li {
	border-bottom: 1px solid #3C3F41;
	list-style-type:none
}

.submenu a {
	display: block;
	text-decoration: none;
	color: #d9d9d9;
	padding: 12px;
	padding-left: 42px;
	-webkit-transition: all 0.25s ease;
	-o-transition: all 0.25s ease;
	transition: all 0.25s ease;
}

.submenu a:hover {
	background: #000000;
	color: #FFF;
	text-decoration: none;
	cursor:pointer
}
