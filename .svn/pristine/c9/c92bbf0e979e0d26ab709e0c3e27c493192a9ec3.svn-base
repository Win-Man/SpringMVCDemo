<form id="form" style="height: 100%;width: 100%">
    <table>
        <tr>
            <td><label>文章标题:</label></td>
            <td><input id="title" name="title" type="text" class="form-control" placeholder="请输入文章标题"/></td>
        </tr>
        <tr>
            <td colspan="2"><label>文章内容：</label></td>

            <!--<input id="content" name="content" type="text" data-provide="markdown"/>-->
        </tr>
        <tr>
            <td colspan="2"><textarea id="content" name="content" rows="20" class="span7"></textarea></td>
        </tr>
        <tr>
            <td colspan="2"><button id="submit" type="button" class="btn btn-default">提交</button></td>
        </tr>

    </table>
</form>
<script>

    PostArticleData={
        MarkDownEditor:null
    }
    PostArticleUtil={
        init:function(){
            PostArticleData.MarkDownEditor= $('#content').markdown();
            $('#submit').on('click',function(){
                PostArticleUtil.submitFunc();
            });
        },
        submitFunc:function(){
            var data = $('#form').serialize();
            alert(markdown.toHtml($('content').val()));
            $.ajax({
                type: 'POST',
                url: 'article/save',
                data: data,
                success: function (page) {
                    $('.blog-content').html(page);
                },
                error: function () {
                    $('.blog-content').html('<div>网络错误</div>')
                }
            });

        }
    }
    $(function(){
        PostArticleUtil.init();
    });
</script>