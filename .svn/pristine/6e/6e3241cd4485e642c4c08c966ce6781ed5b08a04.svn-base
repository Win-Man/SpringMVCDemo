<form id="form" style="height: 80%;width: 100%">
    <table>
        <tr>
            <td><label>博客标题:</label></td>
            <td><input id="title" name="title" type="text" class="form-control" placeholder="请输入博客标题"/></td>
            <td><label>作者:</label></td>
            <td><input id="authorName" name="authorName" type="text" class="form-control" placeholder="请输入作者名字"/></td>
        </tr>
        <tr>
            <td><label>格言:</label></td>
            <td colspan="3"><input id="motto" name="motto" type="text" class="form-control" placeholder="请输入格言"/></td>
        </tr>
    </table>
</form>
<div id="change-confirm">
    <button id="confirm" class="btn btn-primary" disabled="disabled">确认修改</button>
</div>
<script>
    BlogInfoManageData={}
    BlogInfoManageUtil={
        init:function () {
            $('input').on('change',function () {
                BlogInfoManageUtil.inputValueChange();
            });
            $('#confirm').on('click',function () {
                BlogInfoManageUtil.blogInfoSave();
            })
        },
        inputValueChange:function(){
            $('#confirm').removeAttr('disabled');
        },
        blogInfoSave:function () {
            var data = $('#form').serialize();
            $.ajax({
                type: 'POST',
                url: 'admin/blogInfoSave',
                data: data,
                success: function (page) {
                    alert('success');
                },
                error: function () {
                    alert('failed');
                }
            });
        }
    }
    $(function(){
        BlogInfoManageUtil.init();
    })
</script>